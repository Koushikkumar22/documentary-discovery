{
  "version": 2,
  "builds": [
    {
      "src": "api/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/documentaries/random",
      "dest": "/api/random"
    },
    {
      "src": "/api/documentaries",
      "dest": "/api/index"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}